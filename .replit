run = ["uvicorn", "main:app", "--host", "0.0.0.0"]
modules = ["python-3.11"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-24_05"
packages = [
  "libxcrypt",
  "python311Packages.poetry",
  "python311Packages.uvicorn",
  "poetry",
]


[deployment]
run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "5000"]
deploymentTarget = "autoscale"
build = ["pip", "install", "-r", "requirements.txt"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 42755
externalPort = 3000

[agent]
expertMode = true

[project]
name = "ue5-ai-assistant"
description = "FastAPI backend for Unreal Engine AI Viewport integration"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000"
waitForPort = 5000
